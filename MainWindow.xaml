<Window x:Class="CoordinateQuarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Визначення четверті" Height="450" Width="800">
    <Grid>
        <Label Content="Координата X:" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtX" HorizontalAlignment="Left" Margin="120,30,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Координата Y:" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtY" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Обчислити" HorizontalAlignment="Left" Margin="120,130,0,0" VerticalAlignment="Top" Width="120" Click="btnCalculate_Click"/>

        <Label x:Name="lblResult" Content="Результат" HorizontalAlignment="Left" Margin="30,180,0,0" VerticalAlignment="Top" Width="344" Height="30" FontSize="16"/>

        <Canvas x:Name="canvasGraph" HorizontalAlignment="Left" Margin="400,30,0,0" VerticalAlignment="Top" Width="350" Height="350" Background="LightGray"/>
    </Grid>
</Window>
